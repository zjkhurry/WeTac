<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ES_hand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_A400_30</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_A100</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorSecondary" >@color/light_blue_A400</item>

        <!--窗口背景颜色,此处不允许直接赋值如 #FFFFFF，必须在color中定义使用-->
        <item name="android:windowBackground">@color/light_grey</item>

        <!--默认按钮的背景颜色-->
        <item name="android:colorButtonNormal">#F44336</item>

        <!--控件按压时的色调-->
        <item name="android:colorControlHighlight">@color/dark_grey_trans</item>

        <!--一般控件的选中效果默认采用该颜色,如 CheckBox,RadioButton,SwitchCompat，ProcessBar等-->
        <item name="android:colorAccent">#008000</item>

    </style>

</resources>